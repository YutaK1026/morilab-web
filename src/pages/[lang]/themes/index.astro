---
import Layout from '../../../layouts/Layout.astro';
import PageContent from '../../../components/ui/PageContent.astro';
import { translations } from '../../../data/translations';
import './index.css';

export async function getStaticPaths() {
  return [
    { params: { lang: 'jp' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const t = translations[lang as keyof typeof translations];
---
<Layout title={t.themesTitle}>
  <PageContent>
    <div class="themes-content">
      <h1>{t.themesTitle}</h1>
      <div class="themes-grid">
        <div class="theme-card">
          <div class="theme-icon">🔬</div>
          <div class="theme-title">バーチャル内視鏡技術</div>
        </div>
        <div class="theme-card">
          <div class="theme-icon">🖼️</div>
          <div class="theme-title">医用画像処理</div>
        </div>
        <div class="theme-card">
          <div class="theme-icon">💻</div>
          <div class="theme-title">CAD（コンピュータ支援診断）</div>
        </div>
        <div class="theme-card">
          <div class="theme-icon">🧭</div>
          <div class="theme-title">内視鏡ナビゲーション</div>
        </div>
        <div class="theme-card">
          <div class="theme-icon">🎮</div>
          <div class="theme-title">手術シミュレーション</div>
        </div>
        <div class="theme-card">
          <div class="theme-icon">🩺</div>
          <div class="theme-title">気管支鏡ナビゲーション</div>
        </div>
      </div>
      <div class="themes-description">
        <p>{t.themesDescription}</p>
      </div>
    </div>
  </PageContent>
</Layout>