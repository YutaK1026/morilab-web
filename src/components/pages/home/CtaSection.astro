---
export interface Props {
  t: any;
  lang: string;
}
const { t, lang } = Astro.props;
---
<section class="cta-section">
  <div class="cta-content">
    <h2 class="cta-title">{t('exploreText')}</h2>
    <div class="cta-buttons">
      <a href={`/${lang}/themes`} class="cta-button primary">
        <span class="button-icon">🔬</span>
        {t('researchThemes')}
      </a>
      <a href={`/${lang}/awards`} class="cta-button secondary">
        <span class="button-icon">🏆</span>
        {t('awards')}
      </a>
    </div>
  </div>
</section>