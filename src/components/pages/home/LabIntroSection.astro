---
export interface Props {
  t: any;
}
const { t } = Astro.props;
---

<section class="lab-intro-section">
  <div class="intro-header">
    <h2 class="intro-title">{t('labIntroTitle')}</h2>
    <p class="intro-subtitle">{t('labIntroSubtitle')}</p>
    <p class="intro-description">{t('labIntroDescription')}</p>
  </div>
</section>

<style>
  .lab-intro-section {
    margin-bottom: var(--spacing-2xl);
    padding: var(--spacing-2xl) 0;
  }

  .intro-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .intro-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
    background: var(--gradient-medical);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .intro-subtitle {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--accent-color);
    margin-bottom: var(--spacing-lg);
  }

  .intro-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .intro-title {
      font-size: 2rem;
    }

    .intro-subtitle {
      font-size: 1.1rem;
    }

    .intro-description {
      font-size: 1rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
  }
</style>