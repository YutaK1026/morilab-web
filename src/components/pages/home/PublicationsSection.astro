---
export interface Props {
  t: any;
  publications: any[];
}
const { t, publications } = Astro.props;
---
<section class="publications-section">
  <h2 class="section-label">{t('awards')}</h2>
  <div class="pub-list">
    {publications.map((pub: any) => (
      <div class="pub-item">
        <div class="pub-info">
          <div class="pub-journal">{t(pub.journal)}</div>
          <div class="pub-title">{t(pub.title)}</div>
          <div class="pub-desc">{t(pub.desc)}</div>
          {pub.arxivUrl && pub.arxivUrl !== '' && (
            <a href={pub.arxivUrl} class="pub-arxiv-btn" target="_blank" rel="noopener noreferrer">
              {t({ ja: '詳しくみる', en: 'See Details' })}
            </a>
          )}
        </div>
        <div class="pub-img-wrap">
          <img src={pub.img} alt={t(pub.title)} class="pub-img" />
        </div>
      </div>
    ))}
  </div>
</section>